{
    "type": "gpt_neo",
    "data": {
        "train": "Data/slots_data/rhet_data_slots_cleaned_train.json",
        "valid": "Data/slots_data/rhet_data_slots_cleaned_val.json",
        "test": "Data/slots_data/rhet_data_slots_cleaned_test.json"
    },
    "checkpoint": {
        "config_path": "checkpoints/gpt_neo/config.json",
        "bin_path": "checkpoints/gpt_neo/model.bin"
    },
    "model":{
        "bert_base_transformer":{
            "name": "bert-base-uncased",
            "max_len_context":512, 
            "max_len_output":512,
            "tokenizer":{
                "bos_token": "[CLS]",
                "eos_token": "[PAD]",
                "pad_token": "[PAD]",
                "sep_token": "[SEP]",
                "padding_side": "right",
                "lowercase": true
            }
        },
        "gpt_neo":{
            "name": "EleutherAI/gpt-neo-1.3B",
            "max_len_context": 450,
            "max_len_output": 350,
            "tokenizer":{
                "bos_token": "<|endoftext|>",
                "eos_token": "<|endoftext|>",
                "pad_token": "<|endoftext|>",
                "sep_token": "mask",
                "padding_side": "left"
            }
        },
        "t5_base":{
            "name": "google/flan-t5-base",
            "max_len_context": 512,
            "max_len_output": 350,
            "tokenizer":{
                "eos_token": "</s>",
                "pad_token": "<pad>",
                "padding_side": "right"
            }
        }
    },
    "train": {
        "learning_rate": 3e-04,
        "warmup": 0.1,
        "gradient_accumulation_steps": 1,
        "epochs": 5,
        "batch_size": 4,
        "save_dir": "checkpoints/flan_t5_base"
    },
    "valid":{
        "validate_steps": 50
    },
    "generation_configs":{
        "greedy":{
            "min_new_tokens": 1,
            "max_new_tokens": 350
        },
        "sampling_topk":{
            "temperature": 1.0,
            "min_new_tokens": 1,
            "max_new_tokens": 350,
            "no_repeat_ngram_size": 3,
            "do_sample": true,
            "top_k":50
        },
        "sampling_topp":{
            "temperature": 1.0,
            "min_new_tokens": 1,
            "max_new_tokens": 350,
            "no_repeat_ngram_size": 3,
            "do_sample": true,
            "top_k":0,
            "top_p":0.95
        },
        "sampling_topk_topp":{
            "temperature": 1.0,
            "min_new_tokens": 1,
            "max_new_tokens": 350,
            "no_repeat_ngram_size": 3,
            "do_sample": true,
            "top_k":50,
            "top_p":0.95
        },
        "beam":{
            "min_new_tokens": 1,
            "max_new_tokens": 350,
            "num_beams": 5,
            "num_return_sequences": 1
        }
    }
}